@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title float-left">Deneyim Listesi</h4>
            <div class="float-right"><a href="/Experience/AddExperience" class="btn btn-primary">Yeni Deneyim Ekle</a></div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Açıklama</th>
                            <th>Resim</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.ExperienceID</td>
                            <td>@item.Name</td>
                            <td > @item.Date</td>
                            <td>@item.Description</td>
                            <td class="text-primary"> <img src=" @item.ImageUrl"></td>
                                <td>
                                    <a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger" onclick="return confirm('@item.Name ' + ' adlı hizmeti silmek istediğinizden emin misiniz ?');">Sil</a>
                                    <a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-success">Güncelle</a>
                                </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

