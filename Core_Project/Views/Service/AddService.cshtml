
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Hizmet Ekle</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Hizmet Adı</label>
                    <input type="text" class="form-control" name="Title" placeholder="Hizmet Adı">
                </div>
                <div class="form-group">
                    <label>Resim URL</label>
                    <input type="text" class="form-control" name="ImageUrl" placeholder="Resim">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Hizmet Ekle</button>
                <button href="#" class="btn btn-dark">Kapat</button>
            </form>

        </div>
    </div>
</div>

