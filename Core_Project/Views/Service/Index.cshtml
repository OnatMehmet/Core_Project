@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title float-left">Hizmet Listesi Tablosu</h4>
            <div class="float-right"><a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle</a></div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Resim</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.ServiceId</td>
                                <td>@item.Title</td>
                                <td class="text-primary"> <img src=" @item.ImageUrl"></td>
                                <td>
                                    <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger" onclick="return confirm('@item.Title ' + ' adlı hizmeti silmek istediğinizden emin misiniz ?');">Sil</a>
                                    <a href="/Service/EditService/@item.ServiceId" class="btn btn-outline-success">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

