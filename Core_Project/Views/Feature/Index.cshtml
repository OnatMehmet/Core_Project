@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Öne Çıkan Post Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.FeatureId)
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x=>x.Header, new{@class ="form-control"})
                </div>

                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x=>x.Name, new{@class ="form-control"})
                </div>

                <div class="form-group">
                    <label>Pozisyon</label>
                    @Html.TextBoxFor(x=>x.Title, new{@class ="form-control"})

                </div>
                <button type="submit" class="btn btn-primary btn-block btn-lg mr-2"> Güncelle</button>
              
            </form>

        </div>
    </div>
</div>

