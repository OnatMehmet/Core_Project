@using EntityLayer.Concrete
@model Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Beceri Düzenleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.SkillId)
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x=>x.Title, new{@class ="form-control"})
                </div>

                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x=>x.Value, new{@class ="form-control"})
                </div>

                <button type="submit" class="btn btn-primary mr-2">Beceri Güncelle</button>
                <button href="#" class="btn btn-dark">İptal</button>
            </form>

        </div>
    </div>
</div>

