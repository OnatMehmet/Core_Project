
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Deneyim Ekle</h4>
            
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label >Başlık</label>
                    <input type="text" class="form-control" name ="Name" placeholder="Deneyim Adı">
                </div>
                <div class="form-group">
                    <label >Tarih</label>
                    <input type="text" class="form-control"  name="Date" placeholder="Tarih">
                </div>
                <div class="form-group">
                    <label >Açıklama</label>
                    <input type="text" class="form-control" name="Description"  placeholder="Açıklama">
                </div>
               
                <div class="form-group">
                    <label>Resim Ekle</label>
                    <input type="file" name="ImageUrl" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Deneyim Ekle</button>
                <button href="#" class="btn btn-dark">Kapat</button>
            </form>
         
        </div>
    </div>
</div>

