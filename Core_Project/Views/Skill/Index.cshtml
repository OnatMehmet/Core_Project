@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    th{
       
        font-weight:bold;
    }
    h1{
        margin-left: 40%;
        padding: 5px;
    }
</style>
<h1>Beceriler Tablosu</h1>

<table class="table table-bordered">
    <tr>
        
        <th>#</th>
        <th>Başlık</th>
        <th>Oran</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @for (int i = 1; i <= 10; i++)
    {
        <tr>
            <td>@i</td>
            <td>SQL</td>
            <td>80</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }

   
</table>

