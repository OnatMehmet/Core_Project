@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Card header -->


<br />

<div class="col-md-12">
    <div class="float-left"><h3>Beceri Listesi Tablosu</h3></div>
    <div class="float-right"><a href="/Skill/AddSkill" class="btn btn-primary">Yeni Beceri Ekle</a></div>

</div>
<br />

<!-- Light table -->
<br />
<br />
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>

                <th>#</th>
                <th>Başlık</th>
                <th>Oran</th>
                <th>İşlem</th>
              

            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.SkillId
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>

                    <td>
                        <div class="d-flex align-items-center">
                            <span class="completion mr-2">@item.Value</span>
                            <div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
                                    style="width: @item.Value%"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td class="budget">
                        <a href="#" class="btn btn-danger">Sil</a>
                        <a href="#" class="btn btn-success">Güncelle</a>
                    </td>
                   
                </tr>
            }

        </tbody>
    </table>

</div>